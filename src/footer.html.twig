<footer class="footer">
    

    <div class="footer-menu">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-logo-footer">
                    <a href="https://datack-camp.fr/">
                        <img src="{{ (citipo_theme_asset_url('assets/logo-footer.png')) }}">
                    </a>
                </div>
                <div class="col-md-10">
                    {% for item in current_project.footer %}

                            <a href="{{ item.url }}" class=""
                               {% if item.openNewTab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                                {{ item.label }}
                            </a>

                            {% if item.children|length > 0 %}
                                <div class="mt-3">
                                    {% for child in item.children %}
                                        <div class="mb-1">
                                            <a href="{{ child.url }}" class="" data-turbo="optional"
                                               {% if child.openNewTab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                                                {{ child.label }}
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}

                    {% endfor %}
                </div>
                <div class="col-md-2">
                    <a href="https://datack.fr/" class="" target="_blank" rel="noopener noreferrer">Datack.fr</a>
                </div>
            </div>
        </div>
    </div>
</footer>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
