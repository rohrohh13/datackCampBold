$(function(){
  $( ".attente-formation-flex-div" ).mouseover(function() {
    $(this).find(".attente-formation-opacity p").addClass('visible-legende');
  });
});

$(function(){
  $( ".attente-formation-flex-div" ).mouseout(function() {
    $(this).find(".attente-formation-opacity p").removeClass('visible-legende');
  });
});





$(function(){
  $(".faqTitre img").click(function(){
        if (jQuery(this).hasClass("essaiUp")) {
            jQuery(this).parent().next(".faqReponse").removeClass('hideFaq');
            jQuery(this).removeClass('essaiUp');
            
        } else {
            $(this).parent().next(".faqReponse").addClass('hideFaq');
            $(this).addClass('essaiUp');
        }
    });
});
